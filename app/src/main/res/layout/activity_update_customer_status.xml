    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORDER RECEIVED"
            android:id="@+id/button3"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:onClick="orderReceivedBtnAction"
            android:background="#ff94ff6b"
            android:layout_marginRight="20dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </TableRow>
-->

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select reason for no order:"
            android:id="@+id/textView1"
            android:layout_column="0"
            android:minHeight="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Spinner
            android:id="@+id/no_order_reason_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:entries="@array/no_order_reason_arrays"
        />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason for no order:"
            android:id="@+id/textView"
            android:layout_column="0"
            android:minHeight="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp" />
    </TableRow>



    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no_order_reason"
            android:layout_column="0"
            android:layout_marginLeft="20dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPDATE STATUS"
            android:id="@+id/button4"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:onClick="updateStatusBtnAction"
            android:background="#ffffae96"
            android:layout_marginRight="20dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Location"
            android:id="@+id/button5"
            android:layout_column="0"
            android:onClick="updateLocationBtnClick"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:id="@+id/distancetv"
            android:layout_column="0"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp" />
    </TableRow>
</TableLayout>
</ScrollView>