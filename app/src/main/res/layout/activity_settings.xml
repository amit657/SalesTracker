<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="salestracker.shyamsales.com.salestracker.Settings">



    <TextView android:text="Salesman Name" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="20dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sm_spinner"
        android:prompt="@string/beat_route_prompt"
        android:layout_marginTop="20dp"

        android:layout_below="@+id/textView3"
        android:padding="5dp" />

   <!-- <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/salesManNameEt"
        android:layout_below="@+id/sm_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="200dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Salesman"
        android:id="@+id/save_salesman_btn"
        android:layout_below="@+id/salesManNameEt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="saveSalesMan_click" />-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete all new Customer"
        android:id="@+id/delete_all_new_cust_btn"
        android:layout_below="@+id/sm_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:onClick="deleteAllNewCustomer_click" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete all targets in active beat"
        android:id="@+id/delete_target_btn"
        android:layout_below="@+id/delete_all_new_cust_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:onClick="deleteAllTargets_click" />

    <TextView android:text="Active Beat Route" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:layout_below="@+id/delete_target_btn"
        android:layout_marginTop="20dp" />

    <TextView android:text="Dummy" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:id="@+id/textView5"
        android:textSize="20dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:prompt="@string/beat_route_prompt"
        android:layout_marginTop="20dp"

        android:layout_below="@+id/textView5"
        android:padding="2dp" />

</RelativeLayout>